layout_poetry() {
  if [[ ! -f pyproject.toml ]]; then
    log_error 'No pyproject.toml found. Use `poetry new` or `poetry init` to create one first.'
    exit 2
  fi

  # create venv if it doesn't exist
  poetry run true

  export VIRTUAL_ENV=$(poetry env info --path)
  export POETRY_ACTIVE=1
  PATH_add "$VIRTUAL_ENV/bin"
}

set_kitty_tab_colors() {
  if has kitty-tab-color; then
    local file="$(find_up .vscode/settings.json)"
    if [[ "$file" ]]; then
      # execute jq
      local color="$(<"$file" jq -r '."peacock.color" // ""')"
      if [[ "$color" ]]; then
        export KITTY_TAB_AFG=#fff
        export KITTY_TAB_ABG="$color"
        export KITTY_TAB_IFG=#ccc
        export KITTY_TAB_IBG="$color"
      fi
    fi
  fi
}

set_kitty_tab_colors
