{
    "editor.fontFamily": "Victor Mono Medium",
    "editor.fontSize": 13,
    "editor.lineHeight": 15,
    "editor.fontLigatures": true,
    "editor.rulers": [80, 100],
    "editor.renderWhitespace": "all",
    "editor.tabCompletion": "on",
    "editor.suggest.localityBonus": true,
    "editor.suggest.showStatusBar": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.snippetSuggestions": "top",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.renderLineHighlight": "all",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,

    "terminal.integrated.fontFamily": "Fantasque Sans Mono",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.splitCwd": "workspaceRoot",

    "breadcrumbs.enabled": true,

    "explorer.openEditors.sortOrder": "alphabetical",

    "problems.showCurrentInStatus": true,

    "search.showLineNumbers": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,

    "window.title": "${rootPath}${separator}${activeFolderMedium}${separator}${activeEditorShort}",
    "window.restoreWindows": "preserve",
    "window.closeWhenEmpty": true,
    "window.zoomLevel": 0,

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.hotExit": "onExitAndWindowClose",

    "workbench.editor.showTabs": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorTheme": "Spacegray Eighties Dark",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.list.keyboardNavigation": "filter",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,

    "debug.showBreakpointsInOverviewRuler": true,

    "scm.alwaysShowRepositories": true,

    // colors
    "workbench.colorCustomizations": {
        // selection
        "editor.selectionHighlightBackground": "#040E",
        "editor.selectionHighlightBorder": "#080",
        "minimap.selectionHighlight": "#080",
        "editorOverviewRuler.selectionHighlightForeground": "#080E",

        // find
        "editor.findMatchBackground": "#B00",
        "editor.findMatchHighlightBackground": "#FFF0",
        "editor.findMatchHighlightBorder": "#F00",
        "minimap.findMatchHighlight": "#A00",
        "editorOverviewRuler.findMatchForeground": "#A00E",
    },

    "editor.tokenColorCustomizations": {
        "comments": "#27bd2f",
        "textMateRules": [
            {
                "scope": ["keyword.control", "storage"],
                "settings": {"fontStyle": "italic"}
            },
            {
                "scope": ["variable"],
                "settings": {"foreground": "#ffaa00"}
            },
            {
                "scope": ["string"],
                "settings": {"foreground": "#9198ff"}
            },
            {
                "scope": ["string.quoted"],
                "settings": {"foreground": "#ff8af7"}
            },
            {
                "scope": ["string.quoted.docstring.multi.python", "string.quoted.docstring.raw.multi.python"],
                "settings": {"foreground": "#27bd2f", "fontStyle": "bold"}
            },
            {
                "scope": ["entity.name.tag"],
                "settings": {"foreground": "#99F"}
            },
            {
                "scope": ["entity.other.attribute-name"],
                "settings": {"foreground": "#cc6"}
            },
            {
                "scope": ["punctuation.section.embedded"],
                "settings": {"foreground": "#0f0"}
            }
        ]
    },

    // extensions
    "gitlens.codeLens.enabled": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,

    "peacock.surpriseMeOnStartup": false,
    "peacock.affectStatusBar": true,
    "peacock.affectActivityBar": true,
    "peacock.affectAccentBorders": false,
    "peacock.affectTabActiveBorder": true,
    "peacock.favoriteColors": [
        { "name": "Angular Red", "value": "#b52e31" },
        { "name": "Auth0 Orange", "value": "#eb5424" },
        { "name": "Azure Blue", "value": "#007fff" },
        { "name": "C# Purple", "value": "#68217A" },
        { "name": "Gatsby Purple", "value": "#639" },
        { "name": "Go Cyan", "value": "#5dc9e2" },
        { "name": "Java Blue-Gray", "value": "#557c9b" },
        { "name": "JavaScript Yellow", "value": "#f9e64f" },
        { "name": "Mandalorian Blue", "value": "#1857a4" },
        { "name": "Node Green", "value": "#215732" },
        { "name": "React Blue", "value": "#00b3e6" },
        { "name": "Something Different", "value": "#832561" },
        { "name": "Vue Green", "value": "#42b883" },
        { "name": "Salesforce Blue", "value": "#00A1E0" },
        { "name": "Slate Blue", "value": "#7fa1c1" },
        { "name": "setup lavender", "value": "#9a80a9" },
        { "name": "Velocity Purple", "value": "#6c1780" },
        { "name": "Nim Yellow", "value": "#fee760" },
        { "name": "Homebrew Orange", "value": "#FAA638" },
        { "name": "setup (home) purple", "value": "#7f1759" },
        { "name": "Elixir Purple", "value": "#5F456C" },
        { "name": "Phoenix Red", "value": "#ED4A1F" },
        { "name": "Django Green Dark", "value": "#0F422D" },
        { "name": "Django Green Light", "value": "#3DAE80" },
        { "name": "Django Green Official", "value": "#092E20" },
        { "name": "Notes blue", "value": "#5ba5f6" },
    ],

    // language-specific
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "debug.javascript.autoAttachFilter": "smart",

    "[python]": {
        "editor.formatOnSave": false,
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.sortImports.args": ["-m3", "--tc", "--ca"],
    "python.pythonPath": "/usr/local/bin/python3",
    "python.languageServer": "Microsoft",
    "python.globalModuleInstallation": true,
    "python.autoComplete.addBrackets": false,
    "python.testing.pytestEnabled": true,
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        // have to re-specify all default settings to add unused-imports
        // https://code.visualstudio.com/docs/python/linting#_default-pylint-rules
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--enable=unused-import",
    ],
    "python.formatting.provider": "black",
    "jupyter.sendSelectionToInteractiveWindow": false,
    "python.showStartPage": false,

    "[plaintext]": {
        "editor.wordBasedSuggestions": false,
        "editor.wordWrap": "bounded",
    },

    "[elixir]": {
        "editor.wordBasedSuggestions": true,
        "editor.acceptSuggestionOnEnter": "on",
        "editor.formatOnSave": true,
    },

    "[nim]": {
        "editor.acceptSuggestionOnEnter": "smart",
        "editor.formatOnSave": true,
    },

    "go.useLanguageServer": true,

    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "terraform.languageServer": {
        "enabled": true,
        "args": []
    },
}
