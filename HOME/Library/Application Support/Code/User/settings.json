// prettier-ignore
{
    "editor.fontFamily": "Victor Mono",
    "editor.fontWeight": 500,
    "editor.fontSize": 14,
    "editor.lineHeight": 16,
    "editor.fontLigatures": true,
    "editor.rulers": [80, 100],
    "editor.wordWrapColumn": 80,
    "editor.renderWhitespace": "all",
    "editor.tabCompletion": "on",
    "editor.suggest.localityBonus": true,
    "editor.suggest.showStatusBar": true,
    "editor.suggest.preview": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.renderLineHighlight": "all",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wrappingIndent": "indent",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.inlayHints.fontSize": 12,

    "terminal.integrated.fontFamily": "Victor Mono",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": 600,
    "terminal.integrated.splitCwd": "workspaceRoot",
    "terminal.integrated.profiles.osx": {
        "zsh": {"path": "zsh", "args": ["-l"]},
    },
    "terminal.integrated.defaultProfile.osx": "zsh",

    "markdown.preview.fontFamily": "Inter",

    "search.showLineNumbers": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "search.followSymlinks": false,

    "window.title": "${rootPath}${separator}${activeFolderMedium}${separator}${activeEditorShort}",
    "window.restoreWindows": "preserve",
    "window.closeWhenEmpty": true,

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.hotExit": "onExitAndWindowClose",
    "files.autoSave": "onWindowChange",
    "files.associations": {
        "*.avsc": "json",
        "*.fnl": "clojure",
        "*.janet": "clojure"
    },

    "breadcrumbs.enabled": true,
    "outline.showVariables": false,
    "explorer.openEditors.sortOrder": "alphabetical",
    "explorer.openEditors.visible": 0,
    "problems.showCurrentInStatus": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "scm.alwaysShowRepositories": true,
    "security.workspace.trust.untrustedFiles": "open",

    "workbench.tree.indent": 15,
    "workbench.editor.showTabs": true,
    "workbench.editor.wrapTabs": false, // buggy
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.colorTheme": "Spacegray Eighties Dark",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.list.defaultFindMode": "filter",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.editorAssociations": {
        "git-rebase-todo": "default",
        "*.ipynb": "jupyter-notebook"
    },

    // colors
    "workbench.colorCustomizations": {
        // selection
        "editor.selectionHighlightBackground": "#040E",
        "editor.selectionHighlightBorder": "#080",
        "minimap.selectionHighlight": "#080",
        "editorOverviewRuler.selectionHighlightForeground": "#080E",

        // find
        "editor.findMatchBackground": "#B00",
        "editor.findMatchHighlightBackground": "#FFF0",
        "editor.findMatchHighlightBorder": "#F00",
        "minimap.findMatchHighlight": "#A00",
        "editorOverviewRuler.findMatchForeground": "#A00E",
    },

    "editor.tokenColorCustomizations": {
        "comments": "#27bd2f",
        "textMateRules": [
            {
                "scope": ["keyword.control", "storage"],
                "settings": {"fontStyle": "italic"}
            },
            {
                "scope": ["variable"],
                "settings": {"foreground": "#ffaa00"}
            },
            {
                "scope": ["string"],
                "settings": {"foreground": "#9198ff"}
            },
            {
                "scope": ["string.quoted"],
                "settings": {"foreground": "#ff8af7"}
            },
            {
                "scope": ["string.quoted.docstring.multi.python", "string.quoted.docstring.raw.multi.python"],
                "settings": {"foreground": "#27bd2f", "fontStyle": "bold"}
            },
            {
                "scope": ["entity.name.tag"],
                "settings": {"foreground": "#99F"}
            },
            {
                "scope": ["entity.other.attribute-name"],
                "settings": {"foreground": "#cc6"}
            },
            {
                "scope": ["punctuation.section.embedded"],
                "settings": {"foreground": "#0f0"}
            }
        ]
    },

    // extensions
    "binrun.commandTemplate": "kw -d $PWD --post \"hs -c 'focusPreviousWindow()'\"",

    "extensions.ignoreRecommendations": true,

    "gitlens.codeLens.enabled": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
    },
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],

    "peacock.surpriseMeOnStartup": false,
    "peacock.affectStatusBar": true,
    "peacock.affectActivityBar": true,
    "peacock.affectTabActiveBorder": true,
    "peacock.favoriteColors": [
        { "name": "Angular Red", "value": "#b52e31" },
        { "name": "Auth0 Orange", "value": "#eb5424" },
        { "name": "Azure Blue", "value": "#007fff" },
        { "name": "C# Purple", "value": "#68217A" },
        { "name": "Gatsby Purple", "value": "#639" },
        { "name": "Go Cyan", "value": "#5dc9e2" },
        { "name": "Java Blue-Gray", "value": "#557c9b" },
        { "name": "JavaScript Yellow", "value": "#f9e64f" },
        { "name": "Mandalorian Blue", "value": "#1857a4" },
        { "name": "Node Green", "value": "#215732" },
        { "name": "React Blue", "value": "#00b3e6" },
        { "name": "Something Different", "value": "#832561" },
        { "name": "Vue Green", "value": "#42b883" },
        { "name": "Salesforce Blue", "value": "#00A1E0" },
        { "name": "Slate Blue", "value": "#7fa1c1" },
        { "name": "setup lavender", "value": "#9a80a9" },
        { "name": "Velocity Purple", "value": "#6c1780" },
        { "name": "Nim Yellow", "value": "#fee760" },
        { "name": "Homebrew Orange", "value": "#FAA638" },
        { "name": "setup (home) purple", "value": "#7f1759" },
        { "name": "Elixir Purple", "value": "#5F456C" },
        { "name": "Phoenix Red", "value": "#ED4A1F" },
        { "name": "Django Green Dark", "value": "#0F422D" },
        { "name": "Django Green Light", "value": "#3DAE80" },
        { "name": "Django Green Official", "value": "#092E20" },
        { "name": "Notes blue", "value": "#5ba5f6" },
        { "name": "Zig orange", "value": "#F7A41D" },
    ],

    // change default regex to require colon after tag
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS):|^\\s*- \\[ \\])",
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.tree.flat": true,
    "todo-tree.general.tags": [
        "BUG",
        "FIX", "FIXME",
        "HACK",
        "REVIEW", "REV", "R",
        "TODO",
        "WARNING", "WARN",
        "XXX",
    ],
    "todo-tree.general.tagGroups": {
        "FIX": ["FIX", "FIXME"],
        "WARNING": ["WARNING", "WARN"],
        "REVIEW": ["REVIEW", "REV", "R"],
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "white",
    },
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "background": "red",
            "foreground": "black",
            "iconColour": "red",
            "gutterIcon": true,
            "type": "text-and-comment",
        },
        "FIXME": {
            "background": "black",
            "foreground": "yellow",
            "fontWeight": "bold",
            "gutterIcon": true,
        },
        "REVIEW": {
            "type": "whole-line",
            "foreground": "white",
            "background": "#66f",
            "gutterIcon": true,
            "icon": "list-unordered",
            "rulerLane": "full",
        },
        "TODO": {
            "type": "tag",
            "foreground": "orange",
        },
        "WARNING": {
            "type": "text-and-comment",
            "foreground": "red",
        },
    },

    // language-specific
    "[plaintext]": {
        "editor.wordBasedSuggestions": false,
        "editor.wordWrap": "bounded",
    },

    "[markdown]": {
        "editor.wordWrap": "bounded",
    },

    "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
    },
    "json.schemas": [],
    "debug.javascript.autoAttachFilter": "smart",
    "javascript.inlayHints.enumMemberValues.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterTypes.enabled": true,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    "javascript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.variableTypes.enabled": true,

    "[python]": {
        "editor.formatOnSave": false,
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.formatting.provider": "black",
    "python.sortImports.args": ["-m3", "--tc", "--ca"],
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        // have to re-specify all default settings to add unused-imports
        // https://code.visualstudio.com/docs/python/linting#_default-pylint-rules
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--enable=unused-import",
    ],
    "python.globalModuleInstallation": true,
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": false, // depend on direnv instead
    "python.venvFolders": [ // unsure why vscode can't find poetry virtualenvs
        "Library/Caches/pypoetry/virtualenvs/"
    ],
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,

    "jupyter.sendSelectionToInteractiveWindow": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "[elixir]": {
        "editor.formatOnSave": true,
        "editor.wordBasedSuggestions": true,
        "editor.acceptSuggestionOnEnter": "on",
    },
    "elixirLS.suggestSpecs": false,

    "[nim]": {
        "editor.formatOnSave": true,
        "editor.acceptSuggestionOnEnter": "smart",
    },

    "[zig]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "AugusteRame.zls-vscode",
    },
    "zls.path": "zls", // compiled into path at ~/bin

    "[rust]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
    },
    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.chainingHints.enable": true,
    "rust-analyzer.inlayHints.closingBraceHints.enable": true,
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
    "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
    "rust-analyzer.inlayHints.parameterHints.enable": true,
    "rust-analyzer.inlayHints.reborrowHints.enable": "always",
    "rust-analyzer.inlayHints.typeHints.enable": true,

    "[go]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 3,
    },
    "go.lintOnSave": "file",
    "go.lintTool": "golangci-lint",
    "go.coverOnSingleTest": true,
    "go.coverOnSingleTestFile": true,
    "go.coverageDecorator": {
        "type": "gutter",
        "coveredGutterStyle": "blockgreen",
        "uncoveredGutterStyle": "blockred"
    },
    "go.toolsManagement.autoUpdate": true,
    "go.inlayHints.assignVariableTypes": true,
    "go.inlayHints.compositeLiteralFields": true,
    "go.inlayHints.compositeLiteralTypes": true,
    "go.inlayHints.constantValues": true,
    "go.inlayHints.functionTypeParameters": true,
    "go.inlayHints.parameterNames": true,
    "go.inlayHints.rangeVariableTypes": true,

    "[terraform]": {
        "editor.formatOnSave": true,
    },
    "window.zoomLevel": 1,
}
