#!/usr/bin/env python3
"""
Split stdin on fields.

Like awk -F[delim] '{print $1; $print $2, ...}', but shorter.
"""
import fileinput
import os
import re
import sys
from functools import partial


def usage():
    print(
"""usage: f [delim] index[,index2,...] [flags]

index is an int, or Python-like slice (eg :1 or 0:10:2)

flags:
    'r' to treat delim as a regular expression
    'z' to use the null character as output separator""")


def parse_index(index):
    result = []
    for items in index.split(','):
        range_ = items.split(':')
        try:
            if len(range_) == 1: # turn single index into valid slice
                i = int(range_[0])
                range_ = (i, i + 1)

            result.append(slice(*(int(i) if i else None for i in range_)))
        except Exception as e:
            print("Invalid slice:", e, file=sys.stderr)
            return None

    return result


def main(args):
    valid_flags = 'rz'
    flags = ''
    delim = None
    if len(args) == 2:
        index = args[1]
    elif 2 < len(args) <= 4:
        delim, index = args[1:3]
        if not delim:
            delim = None  # empty string is an alias for default separator
        if len(args) == 4:
            flags = args[3]
            if any(f not in valid_flags for f in flags or ''):
                print(
                    f"{flags!r} contained invalid flags. "
                    f"Allowed flags: {valid_flags!r}",
                    file=sys.stderr
                )
                return 1
    else:
        return usage()

    if not (index := parse_index(index)):
        return 1

    end = '\0' if 'z' in flags else "\n"
    def print_parts(parts):
        for slice in index:
            for part in parts[slice]:
                print(part, end=end)

    input = (line.rstrip() for line in fileinput.input('-'))
    if delim == '\n':
        print_parts(list(input))
    else:
        split = re.compile(delim).split if 'r' in flags else partial(str.split, sep=delim)
        for line in map(split, input):
            print_parts(line)


if __name__ == "__main__":
    try:
        result = main(sys.argv)
        sys.stdout.flush()
        sys.exit(result)
    except (KeyboardInterrupt, BrokenPipeError):
        # https://docs.python.org/3/library/signal.html#note-on-sigpipe
        devnull = os.open(os.devnull, os.O_WRONLY)
        os.dup2(devnull, sys.stdout.fileno())
        sys.exit(1)
