#!/usr/bin/env python3
import argparse
import logging

from aush import cd, git, mix, perl

logging.basicConfig(level=logging.INFO)

# parse args
parser = argparse.ArgumentParser(description="Start a Phoenix project")
parser.add_argument("name", help="The name of the project")
args = parser.parse_args()

# create project
mix['phx.new'](args.name, install=True, live=True)
cd(args.name)

# default database user:pass is user:''
perl['-pi', '-e']("s/(?<=username: \")([^\"]+)/$(whoami)/", 'config/dev.exs')
perl['-pi', '-e']("s/(?<=password: \")([^\"]+)//", 'config/dev.exs')

# install prettier for the project
# https://github.com/adamzapasnik/prettier-plugin-eex

# stage files in git
git.init()
git.add(all=True)
git.commit(m="Initial commit")
