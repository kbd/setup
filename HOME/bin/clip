#!/usr/bin/env python3

import subprocess
import sys

CLIPS = {
    'shrug': "Â¯\_(ãƒ„)_/Â¯",
    'shrug2': "Â¯\(Â°_o)/Â¯",
    'check': "â˜‘",
    'nocheck': "â˜",
    'thumb': "ğŸ‘",
    'thumbdown': "ğŸ‘",
    'poop': "ğŸ’©",
    'snowman': "â˜ƒ",
    'flip': "(â•¯Â°â–¡Â°ï¼‰â•¯ï¸µ â”»â”â”»",
    'heart': "â¤ï¸",
    'heartp': "ï¸ğŸ’œ",
    'lod': "à² _à² ",
    'goat': "ğŸ",
}

if __name__ == '__main__':
    clips = sys.argv[1:]
    if not clips:
        print("Available clips:")
        for c, v in sorted(CLIPS.items()):
            print(c, v)
        sys.exit()

    output = []
    for clip in clips:
        if clip not in CLIPS:
            print("No clip named {!r}".format(clip), file=sys.stderr)
            continue

        output.append(CLIPS[clip])

    cmd = "echo '{}' | pbcopy".format(' '.join(output).replace("'", "'\\''"))
    subprocess.check_call(cmd, shell=True)
